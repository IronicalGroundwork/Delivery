<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ironical_groundwork.delivery">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".DeliveryApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Delivery"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name="com.ironical_groundwork.delivery.ui.activity.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Delivery.LoginTheme" />
        <activity
            android:name="com.ironical_groundwork.delivery.ui.activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Delivery.SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Delivery.NoActionBar" />
    </application>

</manifest>